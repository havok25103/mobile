<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="20dp"
    tools:context="com.example.mcleancode.mobile.activity.MenuActivity"
    android:background="@drawable/background_gradient">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <com.example.mcleancode.mobile.view.MenuButtonView
            android:id="@+id/scannerButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/scanner"
            style="@style/MenuButton"/>

        <com.example.mcleancode.mobile.view.MenuButtonView
            android:id="@+id/journalEntriesButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/scannerButton"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/journal_entries"
            style="@style/MenuButton"/>

        <com.example.mcleancode.mobile.view.MenuButtonView
            android:id="@+id/caseFileButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/journalEntriesButton"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/case_file"
            style="@style/MenuButton"/>

    </RelativeLayout>

</LinearLayout>